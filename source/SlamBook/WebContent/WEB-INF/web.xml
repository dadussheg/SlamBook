<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>slambook</display-name>
	<welcome-file-list>
		<welcome-file>/WEB-INF/views/home.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.slambook.controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>com.slambook.core.filters.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>/login</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>reg</servlet-name>
		<servlet-class>com.slambook.controller.RegistrationController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>reg</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>contextPath</param-name>
		<param-value>/sfkal</param-value>
	</context-param>
	<listener>
		<listener-class>com.slambook.core.util.SlambookListener</listener-class>
	</listener>
	<context-param>
		<param-name>bundle</param-name>
		<param-value>resources.messages_en_us_EN</param-value>
	</context-param>
</web-app>